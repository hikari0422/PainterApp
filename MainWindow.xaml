<Window x:Class="PainterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PainterApp"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="WPF Painter App" Height="661" Width="1012">

    <DockPanel>
        <Menu Height="30" DockPanel.Dock="Top">
            <MenuItem Header="檔案" Height="30">
                <MenuItem Header="開新檔案" Height="30" />
                <MenuItem Header="開起舊案" Height="30" />
                <MenuItem Header="儲存檔案" Height="30" />
                <MenuItem Header="結束" Height="30" />
            </MenuItem>
            
        </Menu>

        <ToolBarTray Height="40" DockPanel.Dock="Top">
            <ToolBar Height="35" Background="#FF5FA8E8" Width="400">
                <Label Content="筆刷色彩" Width="70" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="14"/>
                <xctk:ColorPicker x:Name="strokeColorPicker" Width="100" Height="30" DisplayColorAndName="True" SelectedColorChanged="strokeColorPicker_SelectedColorChanged"/>
                <Label Content="填滿色彩" Width="70" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="14"/>
                <xctk:ColorPicker x:Name="fillColorPicker" Width="100" Height="30" DisplayColorAndName="True" SelectedColorChanged="fillColorPicker_SelectedColorChanged"/>

                <Slider x:Name="strokeThicknessSlider" Width="200" VerticalAlignment="Center" Minimum="1" Value="1" TickFrequency="1" IsSnapToTickEnabled="True" Margin="30, 0, 0, 0" ValueChanged="strokeThicknessSlider_ValueChanged" />
                <Label Width="40" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Content="{Binding ElementName=strokeThicknessSlider, Path=Value, StringFormat=F0}" Margin="10, 0, 0, 0" HorizontalContentAlignment="Center" />
            </ToolBar>
            <ToolBar Height="35" Width="300" Background="LightGray" >
                <RadioButton Width="35" Height="35" Tag="Line" Checked="ShapeButton_Checked">
                    <Image Height="30" Width="30" Source="/line.png"/>
                </RadioButton>
                <RadioButton Width="35" Height="35" Tag="Rectangle" Checked="ShapeButton_Checked">
                    <Image Height="30" Width="30" Source="/rectangle.png"/>
                </RadioButton>
                <RadioButton Width="35" Height="35" Tag="Ellipse" Checked="ShapeButton_Checked">
                    <Image Height="30" Width="30" Source="/ellipse.png"/>
                </RadioButton>
                <RadioButton Width="35" Height="35" Tag="Polyline" Checked="ShapeButton_Checked">
                    <Image Height="30" Width="30" Source="/polyline.png"/>
                </RadioButton>
            </ToolBar>
        </ToolBarTray>
        
        <Canvas Background="#FFBAEDED" Height="515" DockPanel.Dock="Top" Width="799" />
        <StatusBar Height="40" DockPanel.Dock="Bottom" Background="#FFB5BBC1" >
            <StatusBarItem>
                <Label x:Name="statusLabel" Content ="Ready" Width="100" Height="28" Margin="100,0,0,0" FontSize="14"/>
            </StatusBarItem>
            <StatusBarItem>
                <Label x:Name="colorLabel" Width="400" Height="28" FontSize="14"/>
            </StatusBarItem>
            <StatusBarItem>
                <Label x:Name="shapeLabel" Width="200" Height="28" FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
